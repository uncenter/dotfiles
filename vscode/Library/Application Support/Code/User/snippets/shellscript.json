{
    "Discard all": {
        "prefix": "!discardall",
        "body": "&> /dev/null"
    },
    "Discard stdout": {
        "prefix": "!discard",
        "body": "> /dev/null"
    },
    "Shebang (bash)": {
        "prefix": "!bash",
        "body": "#!/usr/bin/env bash"
    },
    "Shebang (zsh)": {
        "prefix": "!zsh",
        "body": "#!/usr/bin/env zsh"
    },
    "Shebang (sh)": {
        "prefix": "!sh",
        "body": "#!/usr/bin/env sh"
    },
    "Function": {
        "prefix": "!func",
        "body": ["${1:...}() {", "\t${0:...}", "}"]
    },
    "If": {
        "prefix": "!if",
        "body": ["if ${1:...}; then", "\t${0:...}", "fi"]
    },
    "If-else": {
        "prefix": "!elseif",
        "body": ["if ${1:...}; then", "\t${2:...}", "else", "\t${0:...}", "fi"]
    }
}
