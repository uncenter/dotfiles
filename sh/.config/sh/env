#!/usr/bin/env sh
# 
# ~/.config/sh/env - sh/bash/zsh environment variables.

# Load XDG specifications.
[ -f ~/.config/sh/xdg ] && . ~/.config/sh/xdg

export GPG_TTY=$(tty)
# gpgconf --launch gpg-agent

export LANG=en_US.UTF-8
export EDITOR="hx"
export VISUAL="code"
export LESS="-R"
export MANPAGER="sh -c 'col -bx | bat -l man -p'"

if ! cat /etc/paths | grep "$HOME/.bin" > /dev/null 2>&1; then
    echo "$HOME/.bin" | sudo tee -a /etc/paths > /dev/null
fi
export PATH="${XDG_BIN_HOME:-$HOME/.local/bin}:$PATH"
export PATH="$PYENV_ROOT/bin:$PATH"