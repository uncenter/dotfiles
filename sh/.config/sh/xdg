#!/usr/bin/env sh
# 
# ~/.config/sh/xdg - XDG specifications.


# https://specifications.freedesktop.org/basedir-spec/basedir-spec-latest.html
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_BIN_HOME="$HOME/.local/bin"
export XDG_TRASH_HOME="$HOME/.Trash"
# Custom XDG directories.
export XDG_DEV_DIR="$HOME/Dev"
export XDG_SCRIPT_DIR="$HOME/.bin"

# Environment variables for specific programs.

export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

export SHELL_SESSIONS_DISABLE=1

export GIT_CONFIG_GLOBAL="$XDG_CONFIG_HOME/git/config"

export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc.py"
export PYENV_ROOT="$XDG_DATA_HOME/pyenv"

export NPM_CONFIG_USERCONFIG="${NPM_CONFIG_USERCONFIG:-$XDG_CONFIG_HOME/npm/npmrc}"
export NODE_REPL_HISTORY="${NODE_REPL_HISTORY:-$XDG_DATA_HOME/nodejs/history}"
export PNPM_HOME="$XDG_CACHE_HOME/pnpm"

export CARGO_HOME="${CARGO_HOME:-$XDG_DATA_HOME/cargo}"
export RUSTUP_HOME="${RUSTUP_HOME:-$XDG_DATA_HOME/rustup}"

export GEM_HOME="${GEM_HOME:-$XDG_DATA_HOME/gem}"

export GHCUP_USE_XDG_DIRS=1

export YARN_CACHE_FOLDER="$XDG_CACHE_HOME/yarn"
export YARN_ENABLE_TELEMETRY=0

export GNUPGHOME="${GNUPGHOME:-$XDG_CONFIG_HOME/gnupg}"

export TEALDEER_CONFIG_DIR="$XDG_CONFIG_HOME/tealdeer"
export TEALDEER_CACHE_DIR="$XDG_CACHE_HOME/tealdeer"

export GOPATH="${GOPATH:-$XDG_DATA_HOME/go}"

export ZELLIJ_CONFIG_DIR="$XDG_CONFIG_HOME/zellij"