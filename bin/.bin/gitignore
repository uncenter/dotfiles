#!/usr/bin/env zsh

help() {
    cat <<EOF
gitignore - create a .gitignore file from a template

Usage: gitignore <template> [output]
EOF
}

if [ -z "$1" ] || [[ "$1" == "-h" ]] || [[ "$1" == "--help" ]]; then
    help
    exit 0
fi

output=${2:-.gitignore}
curl -sL "https://www.toptal.com/developers/gitignore/api/$1" > "$output"
sed -i '' -e '1,3d' $output
sed -i '' -e '$d' $output
sed -i '' -e '$d' $output